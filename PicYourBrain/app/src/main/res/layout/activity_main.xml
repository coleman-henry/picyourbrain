<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_start_draw_activity"
        android:text="@string/label_start_draw_activity"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/button_start_gallery_activity"
        android:text="@string/label_start_gallery_activity"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

    <Button
        android:id="@+id/button_show_about"
        android:text="@string/label_show_about"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</LinearLayout>